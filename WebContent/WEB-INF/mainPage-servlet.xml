<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
 		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
 		<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
 		<property name="username" value="escapemaster"/>
 		<property name="password" value="escapemaster"/>
 	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
	<bean id="managerNoticeDAO" class="mainPage.notice.dao.ManagerNoticeDAOImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>
	<bean id="userNoticeDAO" class="mainPage.notice.dao.UserNoticeDAOImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>
	<bean id="branchDAO" class="mainPage.branchManage.dao.BranchDAOImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>
	<bean id="memberDAO" class="mainPage.member.dao.MemberDAOImpl">
      <property name="jdbcTemplate" ref="jdbcTemplate"></property>
     </bean>


	<bean name="/userNotice.mainPage" class="mainPage.notice.userNotice.controller.UserNoticeController">
		<property name="userNoticeDAO" ref="userNoticeDAO"></property>
	</bean>
	
	<bean name="/managerNotice.mainPage" class="mainPage.notice.managerNotice.controller.ManagerNoticeController">
	
	</bean>
	
	<bean name="/branchManage.mainPage" class="mainPage.branchManage.controller.BranchManageController">
		<property name="branchDAO" ref="branchDAO"></property>
	</bean>
	
	<bean name="/memberManage.mainPage" class="mainPage.memberManage.controller.MemberManageController">
		<property name="memberDAO" ref="memberDAO"></property>
	</bean>
	
	<bean name="/memberJoin.mainPage" class="mainPage.member.controller.MemberJoinController">
		
	</bean>
	<bean name="/memberInsert.mainPage" class="mainPage.member.controller.MemberInsertController">
		<property name="memberDAO"  ref="memberDAO"/>
		<property name="commandClass" value="mainPage.member.dto.MemberDTO"/>
	    <property name="commandName" value="memberCmd"/>	
	</bean>

</beans>
