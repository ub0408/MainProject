<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   <bean id="dataSource"
      class="org.springframework.jdbc.datasource.DriverManagerDataSource">
      <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
      <property name="url" value="jdbc:oracle:thin:@localhost:1521:XE" />
      <property name="username" value="escapemaster" />
      <property name="password" value="escapemaster" />
   </bean>

   <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
      <property name="dataSource" ref="dataSource"></property>
   </bean>   
   
   
   <bean name="/main_reservation.reservation" class="mainPage.reservation.controller.ReservationController">
   </bean>
   
   
   <bean name="/branch_reservation.reservation" class="branchPage.reservation.controller.ReservationController">
   </bean>

</beans>